{
  "name": "twitch-stream-alerts",
  "version": "1.0.0",
  "description": "Node script to check Twitch streams data from your favorite streamers and notify in Telegram",
  "license": "MIT",
  "author": "Adri√°n Gonzalo",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node --env-file=.env dist/index.js",
    "dev": "concurrently \"npm run watch\" \"npm run nodemon\"",
    "build": "rimraf dist && tsc",
    "watch": "tsc --watch --pretty",
    "nodemon": "nodemon --env-file=.env dist/index.js"
  },
  "dependencies": {
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
